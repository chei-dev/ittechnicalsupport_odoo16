<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_evaluacion_satisfaccion_tree" model="ir.ui.view">
        <field name="name">evaluacion.tree</field>
        <field name="model">evaluacion</field>
        <field name="arch" type="xml">
            <tree string="Evaluaciones de Satisfacción">
                <field name="incidencia_id"/>
                <field name="rating"/>
            </tree>
        </field>
    </record>

    <record id="view_evaluacion_satisfaccion_form" model="ir.ui.view">
        <field name="name">evaluacion.form</field>
        <field name="model">evaluacion</field>
        <field name="arch" type="xml">
            <form string="Evaluación de Satisfacción">
                <sheet>
                    <group>
                        <field name="incidencia_id"/>
                        <field name="rating"/>
                        <field name="comments"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
